/* pages/components/hotsale/hotsale.wxss */
@import '../../../app.wxss';
.title{
    position: relative;
    top: 20rpx;
    width: 50%;
    font-size: 36rpx;
    margin: 0 auto;
    line-height: 4rpx;
    text-align: center;
  }
  .title .icon{
    font-size: 48rpx;
    position: relative;
    top: 8rpx;
  }
  .title .title_p{
    display: inline-block;
    height: 40rpx;
    line-height: 40rpx;
    padding: 0 20rpx;
    background-color: #f8f8f8;
    position: relative;
    top: -11px;
  }
  .t1{
    border-top: 4rpx solid #fe3000;
    color: #fe3000;
  }
  .t2{
    border-top: 4rpx solid #fe6c00;
    color: #fe6c00;
  }
  .t3{
    border-top: 4rpx solid #884dff;
    color: #884dff;
  }







.ul{
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}
  .li{
    width: 33.3%;
    padding: 10px;
    box-sizing: border-box;
    float: left;
    font-size: 14px;
    color: #666;

  }
  image{
    width: 100%;
    height: 120px;
  }
  .del{
    color: #999;
  }
  .b{
    font-weight: 600;
  }
  .color{
    color: #fe3000;
  }