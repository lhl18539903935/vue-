/* pages/components/groom/groom.wxss */
@import '../../../app.wxss';
.sales{
    width:95%;
    margin:1rem auto;
    clear: both;
  }
  .countdown{
    font-size: 28rpx;
    text-align: center;
    margin:1rem 0;
  }
  .countdown .count_span{
    font-size: 28rpx;
    display: inline-block;
    border:2rpx solid #000;
    padding:0px 6rpx;
    width:50rpx;
    height:50rpx;
    line-height: 50rpx;
    text-align: center
  }
  .salessrc_img{
    width:100%;
    position: relative;
    margin:0.5rem 0 0 0 ;
  }
  .salessrc {
    position: relative;
    width:100%;
    /*height:405px;*/
  }
  .salessrc .salessrc_span{
    display: inline-block;
    width:15%;
    height:100rpx;
    /*line-height: 50px;*/
    text-align: center;
    color:#fff;
    background-color: #FF0000;
    padding:10rpx;
    border:4rpx solid #fff;
    position: absolute;bottom:-30px;right:5%;
  }
  .salesprice .salesfirst_span{
    display: inline-block;
    background-color: #FF0000;
    color:#fff;
    font-size: 24rpx;
    padding:4rpx 10rpx;
    text-align: center
  }
  .salesdetail{
    width:95%;
    margin:0 auto;
  }
  .salesdetail .first_p{
    font-size: 28rpx;
    font-weight: 600;
  }
  .salesdetail .sec_p{
    font-size: 24rpx;
    color:#9D9D9D;
  }
  .salesprice .salespan{
    display: inline-block;
    background-color: #FF0000;
    color:#fff;
    font-size: 24rpx;
    padding:4rpx 10rpx;
    text-align: center
  }
  .salesprice .salespan{
    background-color: #424242!important;
  }
  .salessrc .spancolor{
    background-color: #424242;
  }
  .salesprice .sec_span{
    display: inline-block;
    color:#FF0000;
    font-size: 24rpx;
    width:15%;
    text-align: center
  }
  .salesprice .nowprice{
    color:#424242;
  }
  .salesprice .sale_del{
    display: inline-block;
    color:#FF0000;
    font-size: 24rpx;
    /*width:15%;*/
    text-align: center
  }
  .salesprice .del{
    display: inline-block;
    color:#424242;
    font-size: 24rpx;
    /*width:15%;*/
    text-align: center
  }
  .salesprice{
    border-bottom:2rpx solid #E0E0E0;
    padding-bottom:20rpx;
  }
  .end{
    text-align: center;
    font-weight: 600;
    padding:30rpx;
  }