/* pages/components/shopwindow/shopwindow.wxss */
.shopimg{
    width: 100%;
    height: 100%;
  }
  .main0,.main1{
    width: 100%;
  }
  .main0 .shop_div{
    width: 50%;
    float: left;
    padding: 4rpx;
    box-sizing: border-box;
    position: relative;
  }
  .main0 .shop_p,
  .main1 .shop_p{
    width: calc(100% - 8rpx);
    padding: 8rpx 20rpx;
    box-sizing: border-box;
    background: rgba(0,0,0,.6);
    color: #fff;
    position: absolute;
    bottom: 4rpx;
  }
  .main0 .m0{
    height: 100vw;
  }
  .main0 .m1{
    height: 50vw;
  }
  .main0 .m2{
    height: 50vw;
  }

  .main1 .main1_div{
    width: 33.3%;
    height: 60vw;
    float: left;
    box-sizing: border-box;
    position: relative;
    padding: 4rpx;
  }