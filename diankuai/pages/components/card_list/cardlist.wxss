/* pages/components/card_list/cardlist.wxss */
@import '../../../app.wxss';
.tab{
  background-color: #fff;
  overflow:hidden;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: space-around;
}
  .tab .tab_li{
    flex: 1 0 auto;
    width: 25%;
    float: left;
    text-align: center;
    line-height: 80rpx;
    border-bottom: 2rpx solid #ddd;
  }
  .tab .selected{
    color: red;
    border-bottom: 2rpx solid red;
  }
  .tab-item{
    overflow: hidden;
  }
  .item{
    width: 50%;
    float: left;
    box-sizing: border-box;
    border: 2rpx solid #ddd;
    background-color: #fff;
  }
.item:nth-child(2n){
  border-left: none;
}

  .item .card_img{
    width: 100%;
    height: 50vw;
  }
  .item .card_p{
    padding: 2rpx 10rpx;
  }
.icon-gouwuche{
  font-size: 36rpx;
  display: inline-block;
  width: 56rpx;
  height: 56rpx;
  line-height: 60rpx;
  border-radius: 50%;
  color: #fff;
  text-align: center;
  background-color: #dd2727;
  position: relative;
  top: -16rpx;
}
  .card_b{
    color: #f61d4b;
  }
    .clearfix:after {content: "."; display: block; height:0; clear:both; visibility: hidden;}
  .left{float: left}
  .right{float: right}
  .f10{font-size: 20rpx}
  .f12{font-size: 24rpx}
  .f14{font-size: 28rpx}
  .f16{font-size: 32rpx}
  .f18{font-size: 36rpx}
  .mint-indicator-wrapper{
    z-index: 999;
  }