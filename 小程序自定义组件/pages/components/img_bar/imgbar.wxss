/* pages/components/img_bar/imgbar.wxss */
.imgbar_ul{
    overflow: hidden;
  }
  .yangshi1{
    width: 20%;
    text-align: center;
    box-sizing: border-box;
    padding: 0 4rpx;
    float: left;
    position: relative;
    font-size: 0;
  }
  .yangshi1_img{
    width: 100%;
    height: 120rpx;
  }
  .yangshi1 .yangshi1_p{
    font-size: 24rpx;
    text-align: center;
    border-radius: 24rpx;
    width: 80%;
    left: 10%;
    bottom: 0;
    position: absolute;
  }
  .yangshi2{
    width: 50%;
    padding: 10rpx;
    float: left;
    box-sizing: border-box;
  }
  .yangshi2 .yangshi2_div{
    padding: 10rpx;
    background-color: #fff;
    overflow: hidden;
  }
  .yangshi2 .yangshi2_p{
    line-height: 60rpx;
  }
  .yangshi2 .yangshi2_img{
    width: 60rpx;
    height: 60rpx;
    float: left;
    margin-right: 10rpx;
  }
  .ul2{
    display: flex;
    justify-content: space-around;
  }
  .buju2{
    flex: 1 1 auto;
    width: 20%;
    text-align: center;
    box-sizing: border-box;
    padding: 4rpx;
  }
  .buju2-padding{
    padding: 0 4rpx;
  }
  .buju2 .buju2_img{
    width: 100%;
  }